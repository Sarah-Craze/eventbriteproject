<h2>Inscription</h2>

<%= form_for(@user, as: :user, url: registration_path(:user)) do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "S'inscrire" %>
  </div>
<% end %>

<% if User.devise_modules.include?(:registerable) && controller_name != 'registrations' %>
  <%= link_to "S'inscrire", new_registration_path(resource_name) %>
<% end %>

<% if controller_name != 'sessions' %>
  <%= link_to "Se connecter", new_session_path(@resource_name) %>
<% end %>
